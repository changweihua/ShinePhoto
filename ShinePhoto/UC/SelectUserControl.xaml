<UserControl x:Class="ShinePhoto.UC.SelectUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" x:Name="SelectFileUC"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel>
        <Label Content="{Binding ElementName=SelectFileUC,Path=LabelContent}" />
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Border Height="25" Style="{DynamicResource InputBorder}">
                <TextBox Text="{Binding ElementName=SelectFileUC,Path=SelectedPath}" VerticalAlignment="Center" Name="MainBackground" Background="{x:Null}" BorderThickness="0"  />
            </Border>
            <Image MouseUp="Image_MouseUp" Grid.Column="1" Width="48" Cursor="Hand" Height="48" Source="{Binding ElementName=SelectFileUC,Path=IconPath}" />
        </Grid>
    </StackPanel>
</UserControl>
