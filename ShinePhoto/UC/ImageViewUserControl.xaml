<UserControl x:Class="ShinePhoto.UC.ImageViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:uc="clr-namespace:ShinePhoto.UC"
             Width="1920" Height="1080"
             mc:Ignorable="d" x:Name="imageView"
             d:DesignHeight="300" d:DesignWidth="30">
    <UserControl.Resources>
        
    </UserControl.Resources>
    <UserControl.Background>
        <ImageBrush ImageSource="/Images/ImageViewBG.png" />
    </UserControl.Background>
    <Grid>
        <Canvas IsManipulationEnabled="True" x:Name="canvas">
            <uc:ImageButton x:Name="CloseButton" Canvas.Right="10" Canvas.Top="10" Width="64" Height="64" Image="pack://application:,,,/ShinePhoto.Icons;Component/flat/64/x.png" Tag="Playlists" />
            <!--<Image Style="{StaticResource FlyingImage}" Source="{Binding ElementName=imageView,Path=CurrentImage}" />-->
        </Canvas>
    </Grid>
</UserControl>

